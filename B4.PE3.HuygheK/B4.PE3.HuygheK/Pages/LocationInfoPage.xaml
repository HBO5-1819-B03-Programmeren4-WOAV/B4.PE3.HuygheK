<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="B4.PE3.HuygheK.Pages.LocationInfoPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <TableView>
                <TableSection Title="Locatie Informatie">
                    <TextCell Text="{Binding LocationInfo.Tekst }" Detail="Locatienaam" />
                    <TextCell Text="{Binding LocationInfo.Latitude}" Detail="Latitude" />
                    <TextCell Text="{Binding LocationInfo.Longitude}" Detail="Longitude" />
                   
                </TableSection>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>